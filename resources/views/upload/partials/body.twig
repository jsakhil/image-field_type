<div class="modal-body">

    <div class="dropzone"
         data-folder="{{ folder.id }}"
         data-icon="{{ icon('upload')|escape }}"
         data-max-size="{{ max_upload_size() }}"
         data-message="{{ trans('anomaly.field_type.image::message.upload') }}"
         data-loading="{{ trans('anomaly.field_type.image::message.loading') }}"
         data-uploading="{{ trans('anomaly.field_type.image::message.uploading') }}"
         data-overwrite="{{ trans('anomaly.field_type.file::message.overwrite') }}"
         data-max-parallel="{{ setting_value('anomaly.module.files::max_parallel_uploads', 3) }}"
            {#data-allowed="{{ folder.allowed_types.value ? '.' ~ folder.allowed_types.value|join(',.') }}"#}
         data-allowed="{{ config_get('anomaly.module.files::mimes.types.image')|join(',.') }}"></div>

    <div class="uploads"></div>

</div>